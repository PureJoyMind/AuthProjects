@model UserClaimsViewModel
@{
    ViewData["Title"] = "ManageUserClaims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <input asp-for="UserId" hidden/>
    <div class="card">
        <div class="card-header">

            <h1>Manage User Claims / Permissions</h1>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserClaims.Count; i++)
            {
                <div class="m-2 form-check">
                    <input asp-for="@Model.UserClaims[i].ClaimType" hidden/>
                    <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.UserClaims[i].IsSelected">
                        @Model.UserClaims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-success"/>
            <a asp-action="Index" class="btn btn-warning"> Back to Users</a>
        </div>
    </div>
</form>