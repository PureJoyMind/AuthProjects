@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Register</h1>

<form asp-action="Register" method="post" role="form">
    <h4>Create a new account</h4>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email"/>
            <span asp-validation-for="Email" class="text-danger "></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger "></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger "></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger "></span>
        </div>
    </div>
    <div class="form-grouop">
        <label asp-for="RoleSelected" class="col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                <option disabled selected>--Select Role--</option>
            </select>
            
        </div>
    </div>
    <input hidden asp-for="RoleList"/>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success form-control" type="submit">Register</button>
        </div>
    </div>
</form>

        
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}