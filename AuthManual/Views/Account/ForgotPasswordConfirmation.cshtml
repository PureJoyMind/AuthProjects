@model ResetPasswordLinkViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-info">Forgot Password</h1>

<div class="row">
    <div class="col-md-8">
        <p class="text-danger text-primary">Couldn't set up email server so here's the <a href="@Model.Link">Link</a> to reset your password :)</p>
    </div>
</div>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}