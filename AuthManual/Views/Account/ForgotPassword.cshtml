@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-info">Forgot Password</h1>

<div class="row">
    <div class="col-md-8">

        <form asp-action="ForgotPassword" method="post" role="form">
            <h4>Enter you email.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email"/>
                    <span asp-validation-for="Email" class="text-danger "></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <button class="btn btn-success form-control" type="submit">Send Email</button>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}